{
  "info": {
    "name": "Reset Collection Variables",
    "description": "Use this to reset all variables if needed",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Reset All Variables",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Clear all collection variables",
              "pm.collectionVariables.clear();",
              "",
              "// Reset base URL",
              "pm.collectionVariables.set('baseUrl', 'http://localhost:5000');",
              "",
              "console.log('ðŸ”„ All collection variables have been reset!');",
              "console.log('âœ… Ready for fresh test run');",
              "",
              "pm.test('Variables reset successfully', function () {",
              "    pm.expect(pm.collectionVariables.get('baseUrl')).to.equal('http://localhost:5000');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    }
  ]
}
